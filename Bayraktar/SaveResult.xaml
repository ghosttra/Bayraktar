<Window x:Class="Bayraktar.SaveResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bayraktar"
        mc:Ignorable="d"
        Title="" Height="150" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="0" Content="Ваше ім'я: "/>
        <TextBox x:Name="NameTB" VerticalContentAlignment="Center" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="0" Margin="10"/>
        <Button Click="Save_Click" Style="{DynamicResource MenuButtonStyle}" x:Name="Save" Content="Зберегти" Grid.Column="1" Grid.Row="2" Margin="12"/>

    </Grid>
</Window>
